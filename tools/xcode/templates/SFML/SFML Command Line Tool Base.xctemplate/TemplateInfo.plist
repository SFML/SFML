	    <key>main.cpp:main:event_loop</key>
	    <string>
// Start the game loop
while (window.isOpen())
{
	// Process events
	sf::Event event;
	while (window.pollEvent(event))
	{
		// Close window : exit
		if (event.type == sf::Event::Closed)
			window.close();
        
		// Escape pressed : exit
		if (event.type == sf::Event::KeyPressed &amp;&amp; event.key.code == sf::Keyboard::Escape)
			window.close();
	}
</string>
		
